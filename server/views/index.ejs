<div id='terminal'></div>
<div class='container'>
<% items.forEach((item) => { %>
  <a class='line' href="<%=item.url%>">
    <h3>
      <% if (item.icon) { %>
        <i class='<%=item.icon%>'></i>
      <% } else { %>
        <i class="fa-regular fa-folder"></i>
      <% } %>
        <%=item.name%>
      </h3>
    <div class='description'><%=item.description%></div>
  </a>
<% }) %>
<% if (readme) { %>
<div class='readme markdown-body'>
  <div class='content'><%-readme%></div>
</div>
<% } %>
